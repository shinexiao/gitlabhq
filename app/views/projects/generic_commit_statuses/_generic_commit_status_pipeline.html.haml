- if subject.target_url
  = link_to subject.target_url do
    %span.ci-status-icon
      = render_status_with_link('commit status', subject.status)
    %span.ci-status-text= subject.name
- else
  %span.ci-status-icon
    = render_status_with_link('commit status', subject.status)
  %span.ci-status-text= subject.name
